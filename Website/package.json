{
  "scripts": {
    "browser-livereload": "browser-sync start --server _site/ --listen='127.0.0.1' --port 8080 --files='_site/*' --no-ghost-mode --no-notify --no-inject-changes",
    "watch": "npm-watch build",
    "build": "docfx build",
    "build-full": "docfx",
    "watch-site-only": "npm-watch build-site-only",
    "build-site-only": "docfx build docfx-site-only.json"
  },
  "watch": {
    "build": {
      "patterns": [ "./*" ],
      "extensions": "md,yml,css,cs.js",
      "quiet": false,
      "ignore": "_site/*",
      "delay": 500
    },
    "build-site-only": {
      "patterns": [ "./*" ],
      "extensions": "md,yml,css,cs,js",
      "quiet": false,
      "ignore": "_site/*",
      "delay": 500
    }
  },
  "devDependencies": {
    "npm-watch": "^0.13.0",
    "browser-sync": "^3.0.3"
  }
}